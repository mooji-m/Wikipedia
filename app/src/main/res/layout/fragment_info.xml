<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anim_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:lottie_rawRes="@raw/animation_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <LinearLayout
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/anim_comment"
                app:layout_constraintTop_toTopOf="@id/anim_comment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/fabersanspro46reduced"
                    android:text="Welcome to Material Design"
                    android:textColor="#4e03af"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxEms="12"
                    android:text="All parts of program are made of material components, I hope you enjoy it."
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/layout_1"
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="110dp"
            android:paddingTop="10dp">


            <com.airbnb.lottie.LottieAnimationView

                android:id="@+id/anim_email"
                android:layout_marginStart="-4dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:lottie_rawRes="@raw/animation_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />



            <LinearLayout
                android:gravity="start"
                android:layout_marginTop="14dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/anim_email">

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/fabersanspro46reduced"
                    android:textColor="#06c2eb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact with me :"/>



                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:maxEms="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Email : Droiddiver14@gmail.com"/>



            </LinearLayout>









        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
































</ScrollView>